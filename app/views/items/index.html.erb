<div class="container-left">
	<div class="fixed">
		<ul class="clothing-items-index">

			<ul>
				<% current_user.items_sorted_by_category.each do |item| %>
				<li><%= render :partial => 'item_thumbnail', :locals => { :item => item } %> <%= link_to item.title.titleize, item_path(item), class: 'item-show', :data => { id: item.id }  %> - <%= item.category.title.titleize %></li>
				<% end %>
			</ul>

		</ul>

	</div>
	<div class="flex-item">
		<div class="item-show-spec">
			
		</div>
	</div>
</div>